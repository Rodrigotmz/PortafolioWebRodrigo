---
import '@/styles/global.css';
type Props = {
  text?: string;
  iconName: string;
  color: string;
};

const { text, iconName, color } = Astro.props;
const Icon = await import(`../../assets/skills/${iconName}.svg`);
---

<section class="p-2">
  <div
    class:list={[
      'group relative flex aspect-square w-full max-w-xs flex-col items-center justify-center overflow-hidden rounded-2xl bg-gradient-to-br p-4 sm:p-5 transition-all duration-300 ease-in-out hover:scale-105 hover:contrast-125',
      color,
    ]}
  >
    <span class="z-10 block text-center text-sm sm:text-base font-bold text-white [text-shadow:_0_0_3px_rgb(0_0_0_/_80%)]">
      {text}
    </span>
    <Icon.default class="absolute -right-2 -bottom-2 size-20 sm:size-28 rotate-10 opacity-80 transition-transform group-hover:rotate-12" />
  </div>
</section>


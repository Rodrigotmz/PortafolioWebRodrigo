---
import '@/styles/global.css';
import svgReact from '@/assets/skills/react.svg';
type Props = {
  text?: string;
  iconName: string;
  color: string;
};

const { text, iconName, color } = Astro.props;
const Icon = await import(`../../assets/skills/${iconName}.svg`);
---

<section class="padd-15 mb-8 flex shrink-0 grow-0 basis-1/3">
  <!-- <div class="bg-pt-white border-pt-white-border relative w-full rounded-xl border-[1px] border-solid px-4 py-7 inset-shadow-[0_0_5px_rgba(48,46,77,0.15)] transition-all duration-300 ease-in-out">
  </div> -->
  <div
    class:list={[
      'group relative flex min-h-[180px] w-full flex-col items-center justify-center overflow-hidden rounded-3xl bg-gradient-to-br p-7 transition-all duration-300 ease-in-out hover:scale-105 hover:contrast-125',
      color,
    ]}
  >
    <span class="z-10 block text-2xl font-bold text-white">{text}</span>
    <Icon.default class="absolute -right-4 -bottom-4 size-36 rotate-10 rounded-2xl transition-transform group-hover:rotate-16" />
  </div>
</section>

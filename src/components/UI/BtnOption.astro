---
import '@/styles/global.css';
import type { HTMLAttributes } from 'astro/types';
type Props = HTMLAttributes<'a'> & {
  text?: string;
};
const { text, href, class: className, ...props } = Astro.props;
---

<a
  href={href}
  class="bg-strong-blue mr-2 inline-block cursor-pointer rounded-[40px] border-0 px-9 py-3 text-base font-medium text-white transition-all duration-300 ease-in-out hover:scale-105 hover:transform hover:shadow-[0_0_8px_rgba(21,101,192,0.6)]"
  {...props}
>
  <button>{text}</button>
</a>

<style></style>

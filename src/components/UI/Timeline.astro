---
interface Props {
  empresa: string;
  fecha_inicio: string;
  fecha_fin: string;
  puesto: string;
  responsabilidades: string;
}

const info = Astro.props;
---

<div class="relative pl-10 before:absolute before:top-0 before:left-[9px] before:w-0.5 before:bg-gradient-to-b before:from-cyan-400 before:to-purple-500 before:content-[''] before:-bottom-6 last:before:hidden group">
  <!-- Punto de la línea de tiempo con efecto de resplandor -->
  <div
    class="absolute top-0 left-0 h-5 w-5 rounded-full bg-gradient-to-r from-cyan-400 to-purple-500 shadow-lg shadow-cyan-400/30 transition-transform duration-300 group-hover:scale-125 group-hover:shadow-cyan-400/50"
  >
    <div class="absolute inset-0.5 rounded-full bg-gray-900"></div>
  </div>

  <!-- Fechas -->
  <div class="flex items-center mb-2">
    <svg class="mr-2 h-4 w-4 text-cyan-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
      />
    </svg>
    <span class="text-cyan-300 text-xs sm:text-sm font-medium">
      {info.fecha_inicio} - {info.fecha_fin}
    </span>
  </div>

  <!-- Empresa -->
  <h4
    class="text-white text-lg sm:text-xl font-bold mb-1 group-hover:text-cyan-300 transition-colors"
  >
    {info.empresa}
  </h4>

  <!-- Puesto -->
  <h3 class="text-amber-300 text-base sm:text-lg font-semibold mb-3">
    {info.puesto}
  </h3>

  <!-- Responsabilidades -->
  <p class="text-gray-300 text-sm sm:text-base leading-relaxed">
    {info.responsabilidades}
  </p>
</div>

<style>
  /* Animación más suave para el resplandor del punto */
  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
</style>

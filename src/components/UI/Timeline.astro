---
interface Props {
  empresa: string;
  fecha_inicio: string;
  fecha_fin: string;
  puesto: string;
  responsabilidades: string;
}

const info = Astro.props;
---

<div class="before:bg-pt-red-primary relative pb-12 pl-9 before:absolute before:top-0 before:left-[7px] before:h-full before:w-0.5 before:content-[''] last:pb-0">
  <div class="bg-pt-red-primary absolute top-0 left-0 h-4 w-4 rounded-full"></div>
  <h6 class="text-pt-gray-subtext mb-3 text-sm font-semibold">
    <i class="fa fa-calendar"></i>{info.fecha_inicio} - {info.fecha_fin}
  </h6>
  <h4 class="text-pt-black-g mb-2 text-xl font-bold capitalize">{info.empresa}</h4>
  <h3 class="mb-4 text-lg font-bold text-gray-500 capitalize">{info.puesto}</h3>
  <p class="text-pt-gray-subtext text-base leading-6">{info.responsabilidades}</p>
</div>


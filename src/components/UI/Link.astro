---
const { name, href, class: className, ...rest } = Astro.props;
const { pathname } = Astro.url;
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const Icon = await import(`../../assets/icons/${name}.svg`);
const subpath = pathname.match(/[^\/]+/g);
const isActive = href === pathname || href == '/' + subpath?.[0];

const svgProps = {
  class: 'icon',
  width: 24,
  height: 24,
  ...rest,
};
---

<a href={href} class:list={[className, { active: isActive }]} {...rest}>
  <Icon.default {...svgProps} />
  <slot />
</a>

<style>
  a {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: #67e8f9; /* cian-300 */
    text-decoration: none;
    transition: all 0.2s ease;
    padding: 4px 8px;
    border-radius: 4px;
  }
  
  a:hover {
    color: #ffffff;
    background: rgba(8, 145, 178, 0.1); /* cian-600 con opacidad */
  }
  
  a.active {
    color: #34d399; /* emerald-400 */
    font-weight: 600;
  }
  
  a .icon {
    transition: transform 0.2s ease;
  }
  
  a:hover .icon {
    transform: scale(1.1);
  }
  
  a.active .icon {
    color: #34d399; /* emerald-400 */
  }
</style>

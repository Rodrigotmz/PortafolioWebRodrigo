---
import { Image } from "astro:assets";
import MyImage from "@assets/brand/me.svg";

import { getLangFromUrl, useTranslations } from "@i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<!-- Carta de personaje gamer -->
<article class="lg:col-span-2 perspective-distant">
  <div
    class={`max-w-2xl mx-auto bg-neutral-100 dark:bg-neutral-900 rounded-2xl shadow-2xl p-6 relative overflow-hidden
    transform transform-3d backface-hidden perspective-distant
    hover:scale-105 hover:rotate-2 hover:transition-all duration-300`}
  >
    <!-- Fondo decorativo -->
    <div
      class="absolute inset-0 opacity-20 bg-[url('https://preview.redd.it/akfqd7mvcss51.jpg?auto=webp&s=366856bdf57a60aff9a139835a8f36c3ce60fff8')] bg-cover pointer-events-none"
    >
    </div>

    <!-- Encabezado -->
    <div class="flex items-center space-x-4 mb-6 font-text">
      <Image
        src={MyImage}
        alt="Avatar de JB"
        class="w-24 h-24 rounded-full border-4 border-primary-600 dark:border-neutral-100 shadow-md"
      />
      <div>
        <h3
          class="text-2xl font-title font-bold text-neutral-900 dark:text-neutral-100"
        >
          {t("about.cardCharacter.header.name")}
        </h3>
        <p class="text-primary-600 dark:text-primary-200 font-medium">
          {t("about.cardCharacter.header.class")}
        </p>
        <p class="text-sm text-neutral-700 dark:text-neutral-300">
          {t("about.cardCharacter.header.level")}
        </p>
      </div>
    </div>

    <!-- Stats principales -->
    <div class="grid grid-cols-2 gap-4 mb-6 font-text">
      <div>
        <p class="text-sm text-neutral-600 dark:text-neutral-400">
          {t("about.cardCharacter.mainStats.language")}
        </p>
        <p class="font-medium text-neutral-900 dark:text-neutral-100">
          {t("about.cardCharacter.mainStats.languageValue")}
        </p>
      </div>
      <div>
        <p class="text-sm text-neutral-600 dark:text-neutral-400">
          {t("about.cardCharacter.mainStats.framework")}
        </p>
        <p class="font-medium text-neutral-900 dark:text-neutral-100">
          {t("about.cardCharacter.mainStats.frameworkValue")}
        </p>
      </div>
      <div>
        <p class="text-sm text-neutral-600 dark:text-neutral-400">
          {t("about.cardCharacter.mainStats.skill")}
        </p>
        <p class="font-medium text-neutral-900 dark:text-neutral-100">
          {t("about.cardCharacter.mainStats.skillValue")}
        </p>
      </div>
      <div>
        <p class="text-sm text-neutral-600 dark:text-neutral-400">
          {t("about.cardCharacter.mainStats.arm")}
        </p>
        <p class="font-medium text-neutral-900 dark:text-neutral-100">
          {t("about.cardCharacter.mainStats.armValue")}
        </p>
      </div>
    </div>

    <!-- DescripciÃ³n tipo lore -->
    <p
      class="font-title text-neutral-800 dark:text-neutral-300 text-sm leading-relaxed italic"
    >
      {t("about.cardCharacter.header.description")}
    </p>
  </div>
</article>

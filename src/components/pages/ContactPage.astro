---
import {
  PhoneIcon,
  EnvelopeIcon,
  MapPinIcon,
} from "@heroicons/react/24/outline";

import ContactForm from "@components/forms/ContactForm";
import { getLangFromUrl, useTranslations } from "@i18n/utils";
import ButtonSocial from "@components/buttons/ButtonSocial.astro";
import Button from "@components/buttons/Button.astro";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class={`container px-4 lg:px-0 py-16`}>
  <div>
    <div class="text-center mb-12">
      <h1
        class={`text-4xl lg:text-5xl font-title font-semibold text-neutral-900 dark:text-neutral-100 mb-4`}
      >
        {t("contact.title")}
      </h1>
      <p class="text-neutral-600 dark:text-neutral-300 max-w-2xl mx-auto">
        {t("contact.description")}
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      <div class="flex flex-col gap-4">
        <div class="bg-neutral-50 dark:bg-neutral-900 rounded-xl shadow-md p-6">
          <h2
            class="text-2xl font-semibold text-neutral-900 dark:text-neutral-100 mb-4"
          >
            {t("contact.infoContact.title")}
          </h2>
          <div class="space-y-4">
            <div class="flex items-center">
              <div class="bg-primary-100 p-3 rounded-full mr-4">
                <EnvelopeIcon
                  className="h-6 w-6 text-primary-600 dark:text-primary-400"
                />
              </div>
              <div>
                <h3 class="text-neutral-900 dark:text-neutral-100 font-medium">
                  {t("contact.infoContact.emailTitle")}
                </h3>
                <a
                  href={`mailto:${t("contact.infoContact.emailValue")}`}
                  class="text-neutral-600 dark:text-neutral-300 hover:underline"
                >
                  {t("contact.infoContact.emailValue")}
                </a>
              </div>
            </div>

            <div class="flex items-center">
              <div class="bg-primary-100 p-3 rounded-full mr-4">
                <MapPinIcon
                  className="h-6 w-6 text-primary-600 dark:text-primary-400"
                />
              </div>
              <div>
                <h3 class="text-neutral-900 dark:text-neutral-100 font-medium">
                  {t("contact.infoContact.locationTitle")}
                </h3>
                <p class="text-neutral-600 dark:text-neutral-300">
                  {t("contact.infoContact.locationValue")}
                </p>
              </div>
            </div>

            <div class="flex items-center">
              <div class="bg-primary-100 p-3 rounded-full mr-4">
                <PhoneIcon
                  className="h-6 w-6 text-primary-600 dark:text-primary-400"
                />
              </div>
              <div>
                <h3 class="text-neutral-900 dark:text-neutral-100 font-medium">
                  {t("contact.infoContact.phoneTitle")}
                </h3>
                <a
                  href=`tel:${t("contact.infoContact.phoneValue")}`
                  class="text-neutral-600 dark:text-neutral-300 hover:underline"
                >
                  {t("contact.infoContact.phoneValue")}
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div
        class="bg-neutral-50 dark:bg-neutral-900 rounded-xl shadow-md p-6 lg:col-span-2"
      >
        <h2
          class="text-2xl font-semibold text-neutral-900 dark:text-neutral-100 mb-6"
        >
          Env√≠ame un mensaje
        </h2>
        <ContactForm client:load>
          <Button type="submit" text="Enviar" size="md" variant="primary" />
        </ContactForm>
      </div>
    </div>
  </div>
</section>

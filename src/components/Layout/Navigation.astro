---
import '@/styles/global.css';
import Link from '../UI/Link.astro';

type Links = {
  href: string;
  label: string;
  icon: string;
};

const navLinks: Links[] = [
  { href: '/', label: 'Inicio', icon: 'home' },
  { href: '/about', label: 'Sobre mi', icon: 'user' },
  { href: '/resume', label: 'Tecnolog√≠as', icon: 'resume' },
  { href: '/portafolio', label: 'Portafolio', icon: 'computer' },
  { href: '/contact', label: 'Contacto', icon: 'dotcom' },
];
---

<ul class="mx-0 list-none p-4 sm:my-20 sm:p-0">
  {
    navLinks.map((link) => (
      <li class="block">
        <Link name={link.icon} href={link.href}>
          {link.label}
        </Link>
      </li>
    ))
  }
</ul>

<style>
  li a {
    font-size: .75rem;
    font-weight: 700;
    color: #67e8f9; /* cian-300 */
    text-decoration: none;
    line-height: 3rem;
    display: flex;
    align-items: center;
    padding-left: 1em;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
    text-transform: capitalize;
    background: rgba(8, 145, 178, 0.1); /* cian-600 con opacidad */
    margin: .25em 0;
    border-radius: .25rem;
  }
  li a.active {
      color: #34d399; /* emerald-400 */
      background: rgba(16, 185, 129, 0.15); /* emerald-500 con opacidad */
      border-left: .25em solid #34d399;
    }
    li a:not(.active):hover {
      color: #ffffff;
      background: rgba(224, 64, 251, 0.15);
      transform: translateX(5px);
      border-left: .25em solid #e040fb;
    }
    svg {
      margin-right: .5em;
    }
  @media screen and (min-width: 1024px) {
    li a {
      font-size: 18px;
      font-weight: 700;
      color: #67e8f9; /* cian-300 */
      text-decoration: none;
      line-height: 50px;
      display: flex;
      align-items: center;
      padding-left: 16px;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      transition: all 0.3s ease;
      text-transform: capitalize;
      background: rgba(8, 145, 178, 0.1); /* cian-600 con opacidad */
      margin: 4px 0;
      border-radius: 6px;
    }
    li a.active {
      color: #34d399; /* emerald-400 */
      background: rgba(16, 185, 129, 0.15); /* emerald-500 con opacidad */
      border-left: 4px solid #34d399;
    }
    li a:not(.active):hover {
      color: #ffffff;
      background: rgba(224, 64, 251, 0.15);
      transform: translateX(5px);
      border-left: 4px solid #e040fb;
    }
    svg {
      margin-right: 10px;
    }
  }
</style>

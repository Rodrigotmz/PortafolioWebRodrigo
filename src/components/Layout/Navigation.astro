---
import '@/styles/global.css';
import Link from '../UI/Link.astro';

type Links = {
  href: string;
  label: string;
  icon: string;
};

const navLinks: Links[] = [
  { href: '/', label: 'Inicio', icon: 'home' },
  { href: '/about', label: 'Sobre mi', icon: 'user' },
  { href: '/resume', label: 'Tecnolog√≠as', icon: 'resume' },
  { href: '/portafolio', label: 'Portafolio', icon: 'computer' },
  { href: '/contact', label: 'Contacto', icon: 'dotcom' },
];
---

<ul class="mx-0 my-20 list-none p-0">
  {
    navLinks.map((link) => (
      <li class="block">
        <Link name={link.icon} href={link.href}>
          {link.label}
        </Link>
      </li>
    ))
  }
</ul>

<style>
  li a {
    font-size: 18px;
    font-weight: 700;
    color: #302e4d;
    text-decoration: none;
    line-height: 50px;
    display: flex;
    align-items: center;
    padding-left: 10px;
    border-bottom: 1px solid #e8dfec;
    transition: all 0.3s ease;
    text-transform: capitalize;
  }
  li a.active {
    color: #ec1839;
  }
  li a:not(.active):hover {
    transform: translateX(5px);
    color: #ec1839;
  }
  svg {
    margin-right: 10px;
  }
</style>

<div class="fixed top-3 left-3 z-30 h-14 md:hidden" id="navToggler">
  <div class="nav_hamburger">
    <span></span>
    <span></span>
    <span></span>
  </div>
</div>

<style>
  .nav_hamburger {
    position: relative;
    width: 30px;
    height: 20px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    cursor: pointer;
  }
  .nav_hamburger span {
    display: block;
    height: 3px;
    background-color: white;
    border-radius: 3px;
    transition: all 0.4s ease;
  }
  .nav_hamburger.open span:nth-child(1) {
    transform: rotate(45deg) translate(1px, 10px);
  }

  .nav_hamburger.open span:nth-child(2) {
    opacity: 0;
  }

  .nav_hamburger.open span:nth-child(3) {
    transform: rotate(-45deg) translate(2px, -10px);
  }
</style>

<script>
  const navToggler = document.getElementById('navToggler') as HTMLElement;
  const hamburger = navToggler.querySelector('.nav_hamburger') as HTMLElement;
  const nav = document.getElementById('nav') as HTMLElement;

  navToggler.addEventListener('click', () => {
    hamburger.classList.toggle('open');
    nav.classList.toggle('w-full');
  });
</script>

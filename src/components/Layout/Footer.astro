import imgLogo from "@assets/brand/imgLogo.svg";
import imgLogoDark from "@assets/brand/imgLogoDark.svg";

import { Image } from "astro:assets";
import {
  PhoneIcon,
  EnvelopeIcon,
  GlobeAmericasIcon,
  InboxIcon
} from "@heroicons/react/24/outline";

---

<footer
  class="bg-neutral-100 dark:bg-neutral-950 flex flex-col items-center justify-center pt-6"
>
  <div
    class="container grid grid-cols-1 lg:grid-cols-3 items-center lg:items-start gap-10 p-4 lg:p-0 lg:py-4 md:px-0 pb-10 lg:pb-16"
  >
    <div class="flex flex-col items-center gap-4 lg:gap-8">
      <h4
        class="text-neutral-950 dark:text-neutral-50 font-medium text-2xl font-title"
      >
        <!-- {t("footer.title")} -->
      </h4>

      <!-- <Button
        text={t("footer.btn")}
        size="md"
        variant="primary"
        href={translatePath("/contact")} />-->
    </div>

    <div
      class="flex flex-col items-center justify-center lg:items-start gap-10 lg:-order-1"
    >
      <div
        class="flex items-center justify-center lg:justify-start gap-4 lg:order-1"
      >
        <ButtonSocial
          href="https://github.com/Jonathan-Bello"
          icon={iconGithub}
        />
        <ButtonSocial
          href="https://www.linkedin.com/in/jonathan-alexis-bello/"
          icon={iconLinkedin}
        />
        <ButtonSocial
          href="https://www.instagram.com/jonathan_bello/"
          icon={iconInstagram}
        />
        <ButtonSocial
          href="https://www.facebook.com/jonathan.bello"
          icon={iconFacebook}
        />
        <ButtonSocial
          href="https://twitter.com/JonathanBello"
          icon={iconTwitter}
        />
      </div>

      <Image class="h-12 dark:hidden" src={imgLogo} alt="Rodrigo Martinez" />
      <Image
        class="h-12 hidden dark:block"
        src={imgLogoDark}
        alt="Rodrigo Martinez"
      />
    </div>

    <div
      class="hidden flex-col items-start lg:items-end gap-2 row-span-2 lg:flex"
    >
      <div class="flex flex-col items-start gap-2">
        <a
          href="tel:+56923456789"
          class="text-neutral-400 dark:text-neutral-200 font-text text-sm lg:text-lg hover:underline
        flex items-center gap-4"
        >
          <PhoneIcon
            className="h-6 w-6 text-neutral-400 dark:text-neutral-200 inline-block"
          />
          231 231 231 2311
        </a>

        <a
          href="mailto:jonathan.bellofg@gmail.com"
          class="text-neutral-400 dark:text-neutral-200 font-text text-sm lg:text-lg hover:underline
        flex items-center gap-4"
        >
          <EnvelopeIcon
            className="h-6 w-6 text-neutral-400 dark:text-neutral-200 inline-block"
          />
          jonathan.bellofg@gmail.com
        </a>

        <a
          href="https://appdeux.com"
          target="_blank"
          class="text-neutral-400 dark:text-neutral-200 font-text text-sm lg:text-lg hover:underline
      flex items-center gap-4"
        >
          <GlobeAmericasIcon
            className="h-6 w-6 text-neutral-400 dark:text-neutral-200 inline-block"
          />
          appdeux.com
        </a>

        <a
          href="https://appdeux.com"
          target="_blank"
          class="text-neutral-400 dark:text-neutral-200 font-text text-sm lg:text-lg hover:underline
    flex items-center gap-4"
        >
          <InboxIcon
            className="h-6 w-6 text-neutral-400 dark:text-neutral-200 inline-block"
          />
          Mi blog
        </a>
      </div>
    </div>
  </div>

  <div class="bg-primary-700 w-full">
    <p
      class="text-neutral-50 font-title font-medium text-center text-base py-1"
    >
      Rodrigo Martinez - <span id="year"></span>
    </p>
  </div>
</footer>

<script>
  const span = document.getElementById("year") as HTMLElement;
  span.textContent = new Date().getFullYear().toString();
</script>

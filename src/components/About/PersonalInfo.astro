---
import BtnOption from '@/components/UI/BtnOption.astro';
import { getCollection } from 'astro:content';

const perfil = (await getCollection('personalInfo'))[0].data;
---

<section class="text-white-primary mt-6 flex flex-col md:flex-row gap-8 md:gap-12 items-center md:items-start justify-center">
  <div
    class="logo-before logo-after before:border-aqua-glow-claro relative before:top-[-10px] before:left-[-10px] before:h-8 before:w-8 before:rounded-tl-xl after:right-[-10px] after:bottom-[-10px] after:h-8 after:w-8 after:rounded-br-xl"
  >
    <img src="/src/assets/rodrigo.jpg" alt="profile" class="w-40 sm:w-56 md:w-72 lg:w-80 rounded-2xl mx-auto md:mx-0" />
  </div>

  <div class="flex-1 w-full md:w-auto px-4 md:px-0">
    {
      Object.entries(perfil).map(([key, value]) => (
        <div>
          <p class="text-aqua-glow-claro border-b border-solid border-[#e8dfec] py-2 text-sm sm:text-base font-bold capitalize">
            {key}: 
            <span class={`text-white-primary ml-1 font-semibold ${key === 'correo' ? 'lowercase' : ''}`}>
              {value}
            </span>
          </p>
        </div>
      ))
    }
    <div class="mt-4 flex flex-col sm:flex-row gap-3 sm:gap-4">
      <BtnOption text="Descargar CV" href="/files/CV_Rodrigo_Tolentino_Martinez.pdf" target="_blank" rel="noopener noreferrer nofollow" download />
      <BtnOption text="Contacto" href="/contact" />
    </div>
  </div>
</section>




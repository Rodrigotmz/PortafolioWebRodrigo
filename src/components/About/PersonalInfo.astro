---
import BtnOption from '@/components/UI/BtnOption.astro';
import { getCollection } from 'astro:content';

const perfil = (await getCollection('personalInfo'))[0].data;
---

<section class="text-white-primary mt-4 flex flex-shrink-0 flex-grow-0 items-center justify-start">
  <div
    class="logo-before logo-after before:border-aqua-glow-claro relative mt-2 mr-[200px] before:top-[-15px] before:left-[-15px] before:h-10 before:w-10 before:rounded-tl-2xl after:right-[-15px] after:bottom-[-15px] after:h-10 after:w-10 after:rounded-br-2xl"
  >
    <img src="/src/assets/rodrigo.jpg" alt="profile" class="h-[400px] rounded-2xl" />
  </div>
  <div class="ml-4">
    {
      Object.entries(perfil).map(([key, value]) => (
        <div>
          <p class="text-aqua-glow-claro border-b border-solid border-[#e8dfec] py-2.5 text-base font-bold capitalize">
            {key}: <span class={`text-white-primary ml-1 font-semibold ${key === 'correo' ? 'lowercase' : ''}`}>{value}</span>
          </p>
        </div>
      ))
    }
    <div class="mt-6">
      <BtnOption text="Descargar CV" href="/files/CV_Rodrigo_Tolentino_Martinez.pdf" target="_blank" rel="noopener noreferrer nofollow" download />
      <BtnOption text="Contacto" href="/contact" />
    </div>
  </div>
</section>


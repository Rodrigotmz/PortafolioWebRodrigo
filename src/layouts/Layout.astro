---
import Header from '@/components/Layout/Header.astro';
import NavTogglerbutton from '@/components/Layout/NavTogglerbutton.astro';
import { ClientRouter } from 'astro:transitions';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Portafolio Rodrigo | Astro</title>
    <ClientRouter />
  </head>
  <body>
    <NavTogglerbutton />
    <Header />
    <main class="fixed top-0 right-0 bottom-0 sm:left-[270px] z-0 
    block min-h-screen overflow-x-hidden 
    overflow-y-auto bg-transparent px-8 py-0 
    transition-all duration-300 ease-in-out">
    
      <slot />
    </main>
    <div class="portafolio-background absolute -z-10 h-full w-full"></div>
  </body>
</html>

